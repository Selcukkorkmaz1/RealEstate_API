@model RealEstate_UI.Dtos.ProductDtos.CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
	<div class="row g-4">
		<div class="col-12">
			<div class="bg-light rounded h-100 p-4">
				<h6 class="mb-4">Add New Ad Product</h6>
				<form method="post">
					<label>Product Title</label>
					<input type="type" asp-for="ProductTitle" class="form-control" />
					<br />
					<label>City</label>
					<input type="type" asp-for="ProductCity" class="form-control" />
					<br />
					<label>District</label>
					<input type="type" asp-for="ProductDistrict" class="form-control" />
					<br />
					<label>Category</label>
					@Html.DropDownListFor(x=>x.ProductCategory,(List<SelectListItem>)ViewBag.v,new{@class="form-control"})
					<br />
					<label>Price</label>
					<input type="type" asp-for="ProductPrice" class="form-control" />
					<br />
					<label>Type</label>
					<input type="type" asp-for="ProductType" class="form-control" />
					<br />
					<label>Cover Phote</label>
					<input type="type" asp-for="ProductImage" class="form-control" />
					<br />
					<label>Address</label>
					<textarea asp-for="ProductAddress" class="form-control"rows="5"></textarea>
					<br />
					<button class="btn btn-primary">Save Product</button>
				</form>
			</div>
		</div>
	</div>
</div>